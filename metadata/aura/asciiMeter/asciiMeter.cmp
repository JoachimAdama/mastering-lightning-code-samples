<aura:component >

    <aura:attribute name="value" type="Decimal" default="0"/>
    <aura:attribute name="max" type="Integer" default="10"/>
    <aura:attribute name="symbol" type="String" default="|"/>

    <aura:handler name="init" value="{!this}" action="{!c.handleValue}"/>
    <aura:handler name="change" value="{!v.value}" action="{!c.handleValue}"/>
    
    <aura:text aura:id="content"/>
	
</aura:component>